# 12. nvim
set -gx NVM_DIR $HOME/.nvm
function nvm
    bass source $NVM_DIR/nvm.sh --no-use ';' nvm $argv
end
function __nvm_complete
    bass source $NVM_DIR/bash_completion ';' complete -C"nvm $argv"
end
# 注册补全（fish 内部完成）
complete -c nvm -f -a "(__nvm_complete)"


